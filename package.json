{
  "name": "@pika/pack",
  "description": "package building, reimagined.",
  "version": "0.3.4",
  "license": "MIT",
  "homepage": "https://www.pikapkg.com/blog/introducing-pika-pack/",
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pikapkg/pack.git"
  },
  "scripts": {
    "build": "node checkpoint/dist-node/index.bin.js build",
    "update-checkpoint": "rimraf checkpoint/ && ncp pkg/ checkpoint/",
    "test": "node pkg/dist-node/index.bin.js build"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "pika-pack",
          "minNodeVersion": 8
        }
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "pack",
          "minNodeVersion": 8
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@pika/types": "^0.3.3",
    "camelcase": "^4.0.0",
    "chalk": "^2.1.0",
    "commander": "^2.9.0",
    "detect-indent": "~5.0.0",
    "execa": "^1.0.0",
    "file-uri-to-path": "^1.0.0",
    "github-url-from-git": "^1.5.0",
    "glob": "^7.1.1",
    "has-yarn": "^1.0.0",
    "hosted-git-info": "^2.7.1",
    "import-from": "^2.1.0",
    "inquirer": "^3.0.1",
    "invariant": "^2.2.0",
    "is-builtin-module": "^2.0.0",
    "is-ci": "^1.0.10",
    "is-scoped": "^1.0.0",
    "issue-regex": "^2.0.0",
    "loud-rejection": "^1.2.0",
    "mkdirp": "^0.5.1",
    "opn": "^5.4.0",
    "p-timeout": "^2.0.1",
    "read": "^1.0.7",
    "semver": "^5.6.0",
    "strip-ansi": "^4.0.0",
    "strip-bom": "^3.0.0",
    "validate-npm-package-license": "^3.0.4"
  },
  "devDependencies": {
    "@pika/plugin-build-node": "^0.3.3",
    "@pika/plugin-simple-bin": "^0.3.3",
    "@pika/plugin-ts-standard-pkg": "^0.3.3",
    "ncp": "^2.0.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "typescript": "^3.2.2"
  }
}
